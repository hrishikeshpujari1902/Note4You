<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    tools:context="com.HrishikeshPujari.Note4you.DetailViewActivity">

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/search_bar"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions"
        android:textColor="@color/black"
        android:textColorHint="#222222"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/note_class_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/note_class_list"
        app:layout_constraintTop_toTopOf="parent" />


    <ListView
        android:id="@+id/note_class_list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:divider="@null"

        android:transcriptMode="alwaysScroll"
        app:layout_constraintBottom_toTopOf="@+id/addnote_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_bar">

    </ListView>


    <Button
        android:id="@+id/addnote_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ADD8E6"
        android:text="@string/add_new_note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/note_class_list"
        app:layout_constraintTop_toBottomOf="@+id/note_class_list" />

</androidx.constraintlayout.widget.ConstraintLayout>
